# init.d/jackett

: ${datadir:="/talecaster/config"}
: ${jackettbin:="/opt/Jackett/JackettConsole.exe"}
: ${command_user:="talecaster:media"}

name="Jackett"
description="Jackett - a Torznab search proxy"
supervisor="supervise-daemon"

command="/usr/local/bin/mono"
command_args="--debug ${jackettbin} -d ${datadir}"
command_args_foreground=""

depend() {
	need net mono
	after firewall mono talecaster
}
